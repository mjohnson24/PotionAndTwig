/* Typography */
{%- if settings.typography_enable -%}
{% assign body_font = settings.body_font_handle %}
{% assign header_font = settings.header_font_handle %}
{% assign paragraph_font = settings.paragraph_font_handle %}

{{ body_font | font_face }}
{{ header_font | font_face }}
{{ paragraph_font | font_face }}

html, body, input, textarea, button, select{
  font-family: {{ body_font.family }}, {{ body_font.fallback_families }};
  font-weight: {{ body_font.weight }};
  font-style: {{ body_font.style }};
}
h1, h2, h3, h4, h5, h6{
  font-family: {{ header_font.family }}, {{ header_font.fallback_families }};
  font-weight: {{ header_font.weight }};
  font-style: {{ header_font.style }};
}
p{
  font-family: {{ paragraph_font.family }}, {{ paragraph_font.fallback_families }};
  font-weight: {{ paragraph_font.weight }};
  font-style: {{ paragraph_font.style }};
}
{%- endif -%}

{%- if settings.font_size_enable -%}
h1{
  font-size: {{ settings.h1_font_size }}px;
}
h2{
  font-size: {{ settings.h2_font_size }}px;
}
h3{
  font-size: {{ settings.h3_font_size }}px;
}
h4{
  font-size: {{ settings.h4_font_size }}px;
}
h5{
  font-size: {{ settings.h5_font_size }}px;
}
h6{
  font-size: {{ settings.h6_font_size }}px;
}
p{
  font-size: {{ settings.p_font_size }}px;
}

@media (max-width: 767px) {
  h1{
