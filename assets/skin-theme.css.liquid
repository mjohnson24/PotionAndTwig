.notification-btn > a:hover, .notification-btn.notification-btn-2 a:hover, .notification-btn-3 a:hover {
  background-color: {{ settings.notificaction_button_hover_bg_color }};
  color: {{ settings.notificaction_button_hover_color }};
}
.notification-icon > button i, .notification-icon.notification-icon-2 > button i, .notification-icon-3 i {
