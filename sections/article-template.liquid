<div class="blog-details ezone_blog_m" id="section-{{ section.id }}">
  <div class="container">
    <div class="row {% if section.settings.sidebar_position == 'left' %}flex-row-reverse{% endif %}">
      <div class="{% if section.settings.blog_sidebar_enable %}col-lg-8{% else %}col-lg-12{% endif %}">
        <div class="blog-details-info mb-90">
          <div class="blog-meta">
            <ul>
              <li>{{ article.author }}</li>
              <li>{{ article.published_at | date: "%B %d, %Y" }}</li>
            </ul>
          </div>
          <h3>{{ article.title }}</h3>
          <img src="{{ article | img_url: 'master' }}" alt="{{ article.image.alt }}">
          {{ article.content }}
        </div>

        {% if article.comments_enabled? %}

        {% assign comment_post_limit = section.settings.comment_post_limit_handle %}
        {% paginate article.comments by comment_post_limit %}


        {% if comment and comment.created_at %}
        <p class="note form-success mt-40">
          {% if blog.comments_modareted? %}
          {{ 'blogs.comments.success_moderated' | t }}            
          {% else %}
          {{ 'blogs.comments.success' | t }}
          {% endif %}
        </p>
        <!-- comments on t this post -->
        {% endif %}


        {% include 'blog-comment-form' %}
        {% include 'blog-comments' %}



        {% if paginate.pages > 1 %}
        <div class="pagination-style mt-30 text-center">
          {% include 'pagination' %}
        </div>
        {% endif %}
        {% endpaginate %}


        {% endif %}
      </div>


      {% if section.settings.blog_sidebar_enable %}
      <div class="col-lg-4">
        {% include 'blog-sidebar' %}
      </div>
      {% endif %}
    </div>
  </div>
</div>

{%- include 'section-style' -%}

