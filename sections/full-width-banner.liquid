<div class="banner_fullwidth" id="section-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="banner_full_content {% if section.settings.section_text_align == 'section_text_left' %}text-left{% elsif section.settings.section_text_align == 'section_text_center' %}text-center{% elsif section.settings.section_text_align == 'section_text_right' %}text-right{% endif %} {% if section.settings.section_mobile_text_align == 'section_text_left' %}text-left{% elsif section.settings.section_mobile_text_align == 'section_text_center' %}text-center{% elsif section.settings.section_mobile_text_align == 'section_text_right' %}mobile-text-right{% endif %}">
          {%- if section.settings.banner_sub_title != '' -%}
          <h4>{{ section.settings.banner_sub_title }}</h4>
          {%- endif -%}
          {%- if section.settings.banner_title != '' -%}
          <h2>{{ section.settings.banner_title }}</h2>
          {%- endif -%}
          {%- if section.settings.banner_button_title != '' -%}
          <a href="{{ section.settings.banner_button_url }}">{{ section.settings.banner_button_title }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{%- include 'section-style' -%}

<style>
  
 {% for block in section.blocks %}
  {% case block.type %}
  {% when 'color' %} 
  
  .banner_full_content h4 {
    color: {{ block.settings.subtitle_color }};
  }
  .banner_full_content h2 {
    color: {{ block.settings.title_color }};
  }
  .banner_full_content a {
    color: {{ block.settings.button_text_color }};
    background-color: {{ block.settings.button_bg_color }};
  }
  .banner_full_content a:hover {
    color: {{ block.settings.button_text_hover_color }};
    background-color: {{ block.settings.button_bg_hover_color }};
  }
  
    {% endcase %}
  {% endfor %}
  
</style>

