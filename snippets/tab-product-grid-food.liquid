{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
{% assign on_sale = true %}
{% endif %}

{% assign sold_out = true %}
{% if product.available %}
{% assign sold_out = false %}
{% endif %}

{% assign variant = product.selected_or_first_available_variant %}

{% if product.available %}
{% assign func = "Shopify.addItem(" | append: variant.id | append: ", 1)" %}
{% endif %}





<div class="single-menu-product mb-30">
  <div class="menu-product-img">
    <a href="{{ product.url | within: collection }}"><img src="{{ product.featured_image.src | img_url: '160x160' }}" alt="{{ featured_image.alt }}"></a>
  </div>
  <div class="menu-product-content">
    <h4><a href="{{ product.url | within: collection }}">{{ product.title }}</a></h4>

    <div class="menu-product-price-rating">
      <div class="menu-product-price">
        {% if on_sale %}
        <span class="menu-product-old">{{ product.compare_at_price | money }} </span>
        <span class="menu-product-new">{{ product.price | money }}</span>
        {% else %}
        <span class="menu-product-new">{{ product.price | money }}</span>
        {% endif %}
      </div>

      <div class="menu-product-rating spr-badge-caption-none">
        <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
      </div>
    </div>
   
    <p class="capitalize">{{ 'blogs.sidebar.categories' | t }}: {{ product.vendor }}</p>
    
  </div>
</div>
