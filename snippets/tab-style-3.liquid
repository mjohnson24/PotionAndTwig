<div class="row">
  <div class="col-md-12 col-lg-7 col-12">
    <div class="product-details-img-content">
      <div class="product-details-tab mr-35 product-details-tab2">
        <div class="product-details-large tab-content">
          <div class="tab-pane active tab_style3_lg show fade" id="pro-details1">
            {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
            <div id="ProductPhoto">
              <a href="{{ featured_image | img_url: 'master' }}">
             
                <img class="zoom_05" id="ProductPhotoImg" src="{{ featured_image | img_url: 'master' }}" data-zoom-image="{{ featured_image | img_url: 'master' }}" data-image-id="{{ image.id }}" alt="">
              </a>
            </div>
          </div>
        </div>

        {% if section.settings.thumb_image_enable %}
        {% if product.images.size > 1 %}
        <div class="product-details-small tab_style3_small nav ml-10 product-details-2 product-dec-slider-2 position-relative" id="ProductThumbs">
          {% for image in product.images limit: 4 %}
          <a class="{% if forloop.first %}active{% endif %} mb-10 product-single__thumbnail" href="{{ image.src | img_url: 'master' }}" 
             data-image="{{ image.src | img_url: 'master' }}" data-image-id="{{ image.id }}" data-zoom-image="{{ image.src | img_url: 'master' }}">

            <img src="{{ image | img_url: 'master' }}" alt="">
          </a>
          {% endfor %}
        </div>
        {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
  <div class="col-md-12 col-lg-5 col-12">
    
    {% include 'product-description' %}
  </div>
</div>